<?xml version="1.0"?>
<config>
  <modules>
    <EmPayTech_GetFinancing>
      <!-- declare module's version information for database updates -->
      <version>0.1.0</version>
    </EmPayTech_GetFinancing>
  </modules>
  <phpunit>
    <suite>
      <modules>
        <EmPayTech_GetFinancing/>
      </modules>
    </suite>
  </phpunit>
  <global>
    <!-- FIXME: this was a test to convert our attributes from quote to order
        <fieldsets>
            <sales_convert_quote>
                <getfinancing_cust_id>
                    <to_order>*</to_order>
                </getfinancing_cust_id>
                <getfinancing_inv_id>
                    <to_order>*</to_order>
                </getfinancing_inv_id>
            </sales_convert_quote>
        </fieldsets>
-->
    <helpers>
      <getfinancing>
        <class>EmPayTech_GetFinancing_Core_Helper</class>
      </getfinancing>
    </helpers>
    <!-- IMPORTANT: if you use your own namespace (i.e. EmPayTech) you also have to declare blocks group for new module. See topic: http://www.magentocommerce.com/boards/viewthread/22416/#t102732 -->
    <blocks>
      <getfinancing>
        <class>EmPayTech_GetFinancing_Block</class>
      </getfinancing>
    </blocks>
    <!-- declare model group for new module -->
    <models>
      <!-- model group alias to be used in Mage::getModel('getfinancing/...') -->
      <getfinancing>
        <!-- base class name for the model group -->
        <class>EmPayTech_GetFinancing_Model</class>
      </getfinancing>
      <getfinancing_adminhtml>
        <class>EmPayTech_GetFinancing_Adminhtml_Model</class>
      </getfinancing_adminhtml>
    </models>
    <!-- declare resource setup for new module -->
    <resources>
      <!-- resource identifier -->
      <getfinancing_setup>
        <!-- specify that this resource is a setup resource and used for upgrades -->
        <setup>
          <!-- which module to look for install/upgrade files in -->
          <module>EmPayTech_GetFinancing</module>
        </setup>
        <!-- specify database connection for this resource -->
        <connection>
          <!-- do not create new connection, use predefined core setup connection -->
          <use>core_setup</use>
        </connection>
      </getfinancing_setup>
      <getfinancing_write>
        <connection>
          <use>core_write</use>
        </connection>
      </getfinancing_write>
      <getfinancing_read>
        <connection>
          <use>core_read</use>
        </connection>
      </getfinancing_read>
    </resources>
  </global>
  <frontend>
    <secure_url>
      <getfinancing_standard>/getfinancing/standard</getfinancing_standard>
    </secure_url>
    <routers>
      <getfinancing>
        <use>standard</use>
        <args>
          <module>EmPayTech_GetFinancing</module>
          <frontName>getfinancing</frontName>
        </args>
      </getfinancing>
    </routers>
    <layout>
      <updates>
        <getfinancing>
          <file>empaytech.xml</file>
        </getfinancing>
      </updates>
    </layout>
  </frontend>
  <!-- declare default configuration values for this module -->
  <default>
    <!-- 'payment' configuration section (tab) -->
    <payment>
      <!-- 'getfinancing' configuration group (fieldset) -->
      <getfinancing>
        <!-- by default this payment method is inactive -->
        <active>0</active>
        <!-- model to handle logic for this payment method -->
        <model>getfinancing/paymentMethod</model>
        <!-- order status for new orders paid by this payment method -->
        <order_status>pending</order_status>
        <!-- default title for payment checkout page and order view page -->
        <title>GetFinancing</title>
        <!-- our default values -->
        <gateway_url_staging>https://api-test.getfinancing.com:10001/gateway/transact.cfm</gateway_url_staging>
        <platform>staging</platform>
        <allowspecific>0</allowspecific>
        <min_order_total>1000</min_order_total>
        <max_order_total>35000</max_order_total>
      </getfinancing>
    </payment>
  </default>
</config>
